<Window x:Class="BD.Logger_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="Logger_Window" Height="152" Width="400">
    <StackPanel Background="#FF252526">
        <TextBox FontSize="20" BorderBrush="Black" BorderThickness="2" Height="40" Background="#FF404047" Text="{Binding Login}" GotFocus="TextBox_GotFocus" />
        <PasswordBox x:Name="passwordBox" FontSize="20" BorderBrush="Black" BorderThickness="2" Height="40" Background="#FF404047" GotFocus="passwordBox_GotFocus"/>
        <Button Content="Zaloguj" FontSize="20" Background="#FF3F3F46" BorderBrush="Black" BorderThickness="2" Click="Button_Click"></Button>

    </StackPanel>
</Window>
